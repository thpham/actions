# Default application configuration for packaged deployment
# Override by editing /etc/default/myapp.conf or this file

server:
  port: 8080

spring:
  application:
    name: myapp

logging:
  level:
    root: INFO
    com.example.myapp: INFO

management:
  endpoints:
    web:
      exposure:
        include: health,info,metrics,prometheus
  endpoint:
    health:
      show-details: when_authorized
